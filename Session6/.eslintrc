{
    "env": {
        "browser": true,  // window, alert, document
        "node": true,
        "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"  // import, export
    },
    "rules": {
        "no-console": ["warn"],
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"],
        "camelcase": ["warn"]
    }
}